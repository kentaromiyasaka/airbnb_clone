<div class="col-sm-4 mx-auto">

<h1 class="text-center p-1">log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group p-1">
        <%= f.email_field :email,class:"form-control" ,id:"exampleInputEmail1",placeholder:"Enter email" %>
    </div>

    <div class="form-group p-1">
        <%= f.password_field :password, class:"form-control" ,placeholder:"Password", autocomplete: "new-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
        <div class="field px-1 pb-2 mb-1">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me ,class:"mr-1" %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        </div>
    <% end %>

    <%= f.submit "Log in", class: 'btn btn-block btn-light'%>
    <hr />
    <%= f.submit "Sign in with Facebook", class: 'btn btn-block btn-light text-info'%>

<% end %>