<div class="row">
    <div class="col-3">
        <div class="card">
            <div class="card-body">
                <%= link_to "Your Listing","#", class: "text-info" %> <br>
                <%= link_to "Your Reservations","#", class: "text-info" %> <br>
                <%= link_to "Yout tips","#", class: "text-info" %> <br>
            </div>
        </div>
    </div>
    <div class="col-9">
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <% @rooms.each do |room| %>
                    <div class="row p-1">
                        <div class="col-3">
                            <% if room.photos.first %>
                                <%= image_tag room.photos.first.image.url, size: '150x100' %>
                            <% end %>
                        </div>
                        <h5 class="col-6 pt-4"><%= room.name%></h5>
                        <div class="col-3 pt-4">
                            <%= link_to "Update",listing_room_path(room), class: "btn btn-success btn-block",id:"update-button" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>