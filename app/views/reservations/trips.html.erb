<div class="row">

    <%= render "rooms/index_sidebar" %> 

    <div class="col-9 card">
        <div class="card-body p-3 row">
            <% @trips.each do |trip| %>
                <div class="col-2">
                    <%= trip.check_in.strftime('%v') %>
                </div>
                <div class="col-3 row">
                    <%= link_to trip.room do %>
                        <%= image_tag trip.room.photos.first.image.url, class: "img-responsive col-12"%>
                    <% end %>
                </div>
                <div class="col-4 row">
                    <h3 class="col-12"><%= trip.room.name%></h3>
                    <%= image_tag avatar_url(trip.room.user), class:"avatar-md rounded-circle ml-0" %>
                    <p class="pt-3 m-2"><%= link_to trip.room.user.fullname %></p>
                </div>
                <div class="col-3">
                    <%= link_to "Review Host","#", class: 'btn btn-block btn-success text-center p-2 m-4' %>
                </div>
            <% end %>
        </div>
    </div>
</div>