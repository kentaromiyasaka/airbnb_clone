<div class="card">
    <div class="row p-3">
        <p class="col-6"><%= link_to "Listing", listing_room_path(@room), class:"text-info py-3"%></p><i class="col-6 fa fa-check text-success pt-1"></i>
        <p class="col-6"><%= link_to "Pricing", pricing_room_path(@room), class:"text-info py-3"%></p><%= done?(@room.price)%>
        <p class="col-6"><%= link_to "Description", description_room_path(@room), class:"text-info py-3"%></p><%= done?(@room.summary)%>
        <p class="col-6"><%= link_to "Photos", photos_room_path(@room), class:"text-info py-3"%></p>
        <span class="col-6">
            <% unless @room.photos.blank? %>
                <i id="photo-check" class="fa fa-check text-success pt-1"></i>
            <% end %>
        </span>
        <p class="col-6"><%= link_to "Amenities", amenities_room_path(@room), class:"text-info py-3"%></p><i class="col-6 fa fa-check text-success pt-1"></i>
        <p class="col-6"><%= link_to "Location", location_room_path(@room), class:"text-info py-3"%></p><%= done?(@room.address)%>
    </div>
    <div class="card-body">
        <%= form_for(@room) do |f| %> 
            <%= f.hidden_field :is_active, value: true %>
            <%= f.submit "Publish", id: "btn-publish", class: 'btn btn-block btn-success', disabled: !ready?(@room) %>
        <% end %>
    </div>
</div>