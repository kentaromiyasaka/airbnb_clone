<div class="col-sm-4 mx-auto">

    <h1 class="text-center p-1">Sign up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "shared/devise_messages" %>
        <div class="form-group p-1">
            <%= f.text_field :fullname,class:"form-control", placeholder:"Fullname" %>
        </div>

        <div class="form-group p-1">
            <%= f.email_field :email,class:"form-control" ,id:"exampleInputEmail1",placeholder:"Enter email" %>
        </div>

        <div class="form-group p-1">
            <%= f.password_field :password, class:"form-control" ,placeholder:"Password", autocomplete: "new-password" %>
        </div>
            <%= f.submit "Sign up", class: 'btn btn-block btn-light'%>
            <hr />
            <div>
                <%= link_to user_facebook_omniauth_authorize_path, class: 'btn btn-block btn-primary' do %>
                    <i class="fa fa-facebook-official"></i> Sign in with Facebook
                <% end %>
            </div>
    <% end %>
</div>