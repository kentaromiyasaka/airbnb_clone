<div class="row">
    <div class="col-3">
        <%= render "sidebar" %> 
    </div>
    <div class="col-9">
        <div class="card">
            <div class="card-header text-info">
                <p class="m-0">Amenities</p>
            </div>
            <%= form_for(@room) do |f| %> 
                <div class="card-body row">
                    <div class="col-4 py-2">
                        <div class="form-group">
                            <%= f.check_box :has_tv %>
                            <%= f.label :has_tv, "TV" %>
                        </div>
                    </div>
                    <div class="col-4 py-2">
                        <div class="form-group">
                            <%= f.check_box :has_kitchen %>
                            <%= f.label :has_kitchen, "Kitchen" %>
                        </div>
                    </div>
                    <div class="col-4 py-2">
                        <div class="form-group">
                            <%= f.check_box :has_internet %>
                            <%= f.label :has_internet, "Internet" %>
                        </div>
                    </div>
                    <div class="col-4 py-2">
                        <div class="form-group">
                            <%= f.check_box :has_heating %>
                            <%= f.label :has_heating, "Heating" %>
                        </div>
                    </div>
                    <div class="col-6 py-2">
                        <div class="form-group">
                            <%= f.check_box :has_aircon %>
                            <%= f.label :has_aircon, "Air Conditioning" %>
                        </div>
                    </div>
                </div>
                <%= f.submit "Save", class: 'btn btn-block btn-success w-25 m-3'%>
            <% end %>
        </div>
    </div>
</div>        
