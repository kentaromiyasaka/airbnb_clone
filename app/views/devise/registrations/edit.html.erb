<div class="row">
    <div class="col-4 text-center">
        <div class="card">
            <div class="card-header text-info">
                <h5>Edit profile</h5>
            </div>
            <div class="card-body text-info">
                <%= link_to "View My Profile", user_path(current_user), class: "nav-link btn btn-light" %>
            </div>
        </div>
    </div>

    <div class="col-8 text-center">
        <div class="card">
            <div class="card-header text-info">
                <h5>Your profile</h5>
            </div>
            <%# 以下フォーム %>
            <div class="card-body text-info">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                    <%= render "shared/devise_messages" %>

                    <div class="form-group p-1">
                        <%= f.text_field :fullname,class:"form-control", placeholder:"Fullname" %>
                    </div>
                    
                    <div class="form-group p-1">
                        <%= f.text_field :phone_number,class:"form-control", placeholder:"Phone number" %>
                    </div>
            
                    <div class="form-group p-1">
                        <%= f.text_area :description,class:"form-control" ,id:"exampleInputEmail1",placeholder:"Description" %>
                    </div>

                    <div class="form-group p-1">
                        <%= f.email_field :email,class:"form-control" ,id:"exampleInputEmail1",placeholder:"Enter email" %>
                    </div>

                    <div class="form-group p-1">
                        <%= f.password_field :password, class:"form-control" ,placeholder:"New Password", autocomplete: "new-password" %>
                    </div>
                    <%= f.submit "Update", class: 'btn btn-block btn-danger'%>
                <% end %>
            </div>
        </div>
    </div>
    
</div>